<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="app.louiemok.uni.starchef.view.ShoppingCartActivity">
    <app.louiemok.uni.starchef.seledefine.YsxNavigationBar
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/de"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/nav"
        android:background="@color/colorGray"/>
    <ListView
        android:id="@+id/lv_shoppingcart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/de"
        android:layout_above="@+id/ll_bottom"
        android:scrollbars="none"
        android:divider="@null"
        android:dividerHeight="15dp" />
    <!--编辑前-->
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">
        <LinearLayout
            android:id="@+id/ll_choose_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/white_7p5dp_border"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="全选"
                android:textSize="14sp"
                android:textColor="@color/textColor"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:text="全计:￥"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0.00"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_checkout"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/bottomPersonalColor"
                android:text="结算"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"/>
        </RelativeLayout>
    </LinearLayout>
    <!--编辑中-->
    <LinearLayout
        android:id="@+id/ll_bottom_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/ll_choose_all_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/white_7p5dp_border"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="全选"
                android:textSize="14sp"
                android:textColor="@color/textColor"
                android:gravity="center"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp">
                <Button
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="分享"
                    android:textSize="14sp"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/white_5dp_border"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="移入关注"
                    android:textSize="14sp"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/white_5dp_border"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:text="删除"
                    android:textSize="14sp"
                    android:textColor="@color/bottomPersonalColor"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/white_5dp_border"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
