<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/subscribe22"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="米其林超市"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:gravity="center|start"
            android:maxLines="1"
            android:ellipsize="end"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/right_arrow"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="买家已付款"
                android:textSize="16sp"
                android:textColor="@color/bottomPersonalColor"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/colorGray"
        android:layout_below="@id/ll_top"/>
    <LinearLayout
        android:id="@+id/ll_goods_into"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_below="@id/v_line"
        android:weightSum="1"
        android:background="@color/backgroundColor">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/example"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.7"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="德国原装进口牧牌 Pure 甘蒂牧场全脂纯牛奶 高钙早餐奶"
                android:textSize="13sp"
                android:textColor="@color/textColor"
                android:maxLines="2"
                android:ellipsize="end"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分类:  "
                    android:textSize="13sp"
                    android:textColor="@color/colorGray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="早餐奶"
                    android:textSize="13sp"
                    android:textColor="@color/colorGray"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.3"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="￥68.00"
                android:textSize="13sp"
                android:textColor="@color/textColor"
                android:gravity="center|end"/>
            <TextView
                android:id="@+id/tv_old_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥98.00"
                android:textSize="13sp"
                android:textColor="@color/colorGray"
                android:gravity="center|end"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="X 1"
                android:textSize="13sp"
                android:textColor="@color/textColor"
                android:gravity="center|end"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_other"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_goods_into"
        android:background="@color/backgroundColor">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="险"
                android:textSize="12sp"
                android:textColor="@color/bottomPersonalColor"
                android:gravity="center"
                android:background="@drawable/order_sig_safe"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保险服务"
                android:textSize="14sp"
                android:textColor="@color/textColor"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="￥68.00"
                android:textSize="13sp"
                android:textColor="@color/textColor"
                android:gravity="center|end"/>
            <TextView
                android:id="@+id/tv_old_price_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥98.00"
                android:textSize="13sp"
                android:textColor="@color/colorGray"
                android:gravity="center|end"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="X 1"
                android:textSize="13sp"
                android:textColor="@color/textColor"
                android:gravity="center|end"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ll_other">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="共两件商品"
                android:textSize="14sp"
                android:textColor="@color/textColor"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="合计￥"
                android:textSize="14sp"
                android:textColor="@color/textColor"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="58.00"
                android:textSize="16sp"
                android:textColor="@color/textColor"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="(含运费￥0.00)"
                android:textSize="14sp"
                android:textColor="@color/textColor"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/v_line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        android:layout_below="@id/rl_detail"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/v_line_1">
        <Button
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/orange_10dp"
            android:text="提醒发货"
            android:textSize="14sp"
            android:textColor="@color/bottomPersonalColor"/>
    </RelativeLayout>
</RelativeLayout>